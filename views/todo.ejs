<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Ma todolist</title>
    <meta charset="UTF-8">
    <link href="css/main.css" rel="stylesheet" type="text/css">
</head>
<body>
<main class="container">
    <h1 class="text-center">Todo list</h1>
    <div class="mb-2">
        <ul class="list-group">
            <% items.forEach((item, index) => { %>
                <li class="list-group-item">
                    <span class="item"><%= item %></span>
                    <a class="btn btn-danger" href="/todo/delete/<%= index %>">Delete</a>
                    <a class="btn btn-primary js-todo-update" data-target="#modal-update" data-id="<%=index%>" href="#">Modifier</a>
                </li>
            <%  }) %>
        </ul>
    </div>
    <div>
        <form method="post" action="/todo/add">
            <div class="form-group">
                <label for="todo">Que dois-je faire ?</label>
                <input type="text" name="todo" id="todo" class="form-control" placeholder="ajouter une tache à faire">
            </div>
            <button type="submit" class="btn btn-primary">Valider</button>
        </form>
    </div>
</main>

<!-- modal -->
<div id="modal-update" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier la tache à faire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <input type="text" name="task" class="form-control" placeholder="modifier une tache à faire">
                    </div>
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>